<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_modify_psd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.doormaster.topkeeper.activity.Act_Modify_Psd">
    <com.doormaster.topkeeper.view.TitleBar
        android:id="@+id/modify_title_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="6%"
        android:layout_gravity="left|top"
        android:gravity="center"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_old_pwd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="5.5%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="6%"
        android:layout_marginTop="0dp"
        app:layout_marginTopPercent="2%"
        android:layout_below="@id/modify_title_bar"
        android:gravity="left"
        android:maxLines="1"
        android:textSize="@dimen/register_tv_size"
        android:text="@string/old_password"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_old_pwd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="5.5%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="5%"
        android:layout_marginRight="0dp"
        app:layout_marginRightPercent="5%"
        android:layout_below="@id/tv_old_pwd"
        android:gravity="left"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="@dimen/register_et_size"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:hint="@string/old_password"
        android:background="@null"/>
    <View
        android:id="@+id/view0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="0.2%"
        android:layout_centerHorizontal="true"
        android:background="@color/gray"
        android:layout_below="@id/et_old_pwd"/>
    <TextView
        android:id="@+id/tv_new_pwd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="5.5%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="6%"
        android:layout_marginTop="0dp"
        app:layout_marginTopPercent="2%"
        android:layout_below="@id/view0"
        android:gravity="left"
        android:maxLines="1"
        android:textSize="@dimen/register_tv_size"
        android:text="@string/new_password"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_new_pwd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="5.5%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="5%"
        android:layout_marginRight="0dp"
        app:layout_marginRightPercent="5%"
        android:layout_below="@id/tv_new_pwd"
        android:gravity="left"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="@dimen/register_et_size"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:hint="@string/enter_new_password"
        android:background="@null"/>
    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="0.2%"
        android:layout_centerHorizontal="true"
        android:background="@color/gray"
        android:layout_below="@id/et_new_pwd"/>
    <TextView
        android:id="@+id/tv_new_pwd2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="5.5%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="6%"
        android:layout_marginTop="0dp"
        app:layout_marginTopPercent="2%"
        android:layout_below="@id/view1"
        android:gravity="left"
        android:maxLines="1"
        android:textSize="@dimen/register_tv_size"
        android:text="@string/ensure_pwd"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/et_new_pwd2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="5.5%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="5%"
        android:layout_marginRight="0dp"
        app:layout_marginRightPercent="5%"
        android:layout_below="@id/tv_new_pwd2"
        android:gravity="left"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="@dimen/register_et_size"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:hint="@string/enter_new_password"
        android:background="@null"/>
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="0.2%"
        android:layout_centerHorizontal="true"
        android:background="@color/gray"
        android:layout_below="@id/et_new_pwd2"/>
    <Button
        android:id="@+id/btn_commit_modify"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="10%"
        android:layout_marginBottom="0dp"
        app:layout_marginBottomPercent="10%"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_black_normal_shape"
        android:text="@string/create_new_password"/>
</android.support.percent.PercentRelativeLayout>
