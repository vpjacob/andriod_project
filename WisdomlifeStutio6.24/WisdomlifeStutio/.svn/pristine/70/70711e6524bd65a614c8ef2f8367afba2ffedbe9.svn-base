<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_act__shake"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    tools:context="com.doormaster.topkeeper.activity.Act_Shake">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_tb_shake"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="28%"
        android:layout_alignParentTop="true"
        android:background="@mipmap/yoho_bg_setting">

        <com.doormaster.topkeeper.view.TitleBar
            android:id="@+id/title_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="21.5%"
            android:layout_gravity="left|top"
            android:gravity="center"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/iv_near"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="22%"
            app:layout_heightPercent="50%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="14%"
            android:layout_below="@+id/title_bar"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/yoho_shake_grey" />
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="72%"
        android:layout_below="@+id/rv_tb_shake"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_shake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="65%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:maxLines="1"
            android:text="@string/shake_to_open_function"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <Switch
            android:id="@+id/lock_info_shake_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="25%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:layout_marginRight="0dp"
            app:layout_marginRightPercent="5%"
            android:layout_alignParentRight="true"
            android:switchMinWidth="60dp"
            android:textOff=""
            android:textOn=""
            android:thumb="@drawable/thumb"
            android:thumbTextPadding="12dp"
            android:track="@drawable/track" />

        <View
            android:id="@+id/view0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="0.2%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"
            android:layout_below="@id/tv_shake"/>
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="70%"
            android:layout_below="@+id/view0"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:maxLines="1"
            android:text="@string/adjust_distance"
            android:textSize="15sp"
            android:textColor="@color/black"/>
        <android.support.v7.widget.AppCompatSeekBar
            android:id="@+id/sk_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="90%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerHorizontal="true"
            android:maxHeight="5dp"
            android:minHeight="5dp"
            android:progressDrawable="@drawable/po_seekbar"
            android:thumb="@drawable/seekbar_thumb"
            android:layout_below="@+id/tv_distance"/>
        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="0.2%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"
            android:layout_below="@id/sk_distance"/>
        <Button
            android:id="@+id/btn_select_device"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="8%"
            android:layout_below="@+id/view1"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="6%"
            android:layout_centerHorizontal="true"
            android:text="@string/select_device"
            android:textColor="@color/white"
            android:background="@drawable/btn_orange_normal_shape"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
