/*清除浮动*/
.clear {
	height: 0px;
	line-height: 0px;
	font-size: 0px;
	clear: both;
}

.imgtop{
    text-align:center;
    width:100%;
    height:200px;
    background: url("../../image/loveback.jpg") no-repeat center;
    background-size:cover;
    background-color:rgba(0,0,0,0.5); 
}

.imgbottom,.imgbottom img{
    width:100%;
}

.imgbottom{
  text-align:center;
}

.content-block{
   margin:0;
   padding:0;
}

.jili{
   text-align:center;
}

.imgtop>div{
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,.4); 
  color:#fff;
  overflow: hidden;
}

.imgtop>div>div{
  margin-top:60px;
}

.bar{
  position:relative;
}

.secondul{
  position:absolute;
  background-color:#444444;
  color:#fff;
  width:30%;
  z-index:10000;
  display:none;
}

.secondul li{
   border-bottom: 1px solid #BBBBBB;
   padding:8px 8px;
} 

.secondul{
   right:0;
}

.last{
  border:none;
}

.jili{
  width:100%;
  background-color:#fff;
  display: -webkit-box;
    display: -moz-box;
    display: -o-box;
    display: box;
    -webkit-box-flex: 1;
    -moz-box-flex: 1;
    -o-box-flex: 1;
    box-flex: 1;
}

.jili>div{ 
   padding:10px;
   -webkit-box-flex: 1;
    -moz-box-flex: 1;
    -o-box-flex: 1;
    box-flex: 1;
    border-bottom: 1px solid #dcdcdc;
}

.changeCor{
   background-color:#0eaae0;
   color:#fff;
}

.jilileft,.jiliright{
   width: 45%;
   display:inline-block;
}

.jilileft{
   border-right:1px solid #fff;
}

.secondul .first{
   width:5px;
   height:5px;
   position:absolute;
   z-index:100;
   -webkit-transform:rotate(45deg);
   transform:rotate(45deg);
   top:-7px;
   right:15px;
   background-color:#444444;
   border:none;
   
}
