<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_act__setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    tools:context="com.doormaster.topkeeper.activity.Act_Setting">
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_title_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="28%"
        android:layout_alignParentTop="true"
        android:background="@mipmap/yoho_bg_setting">

        <com.doormaster.topkeeper.view.TitleBar
            android:id="@+id/setting_title_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="21.5%"
            android:layout_gravity="left|top"
            android:gravity="center"
            android:layout_alignParentTop="true"/>
    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_shake"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="49.7%"
        app:layout_heightPercent="26%"
        android:layout_gravity="left|top"
        android:gravity="center"
        android:clickable="true"
        android:background="@color/white"
        android:layout_below="@+id/rv_title_bar">
        <ImageView
            android:id="@+id/iv_shake"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="40%"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/yoho_press_shake" />

        <TextView
            android:id="@+id/tv_shake"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:layout_below="@id/iv_shake"
            style="@style/tv_setting"
            android:text="@string/shake" />
    </android.support.percent.PercentRelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="0.6%"
        app:layout_heightPercent="52.6%"
        android:layout_toRightOf="@+id/rv_shake"
        android:layout_below="@+id/rv_title_bar"
        android:background="@color/gray2"/>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_near"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="49.7%"
        app:layout_heightPercent="26%"
        android:layout_gravity="right|top"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:clickable="true"
        android:background="@color/white"
        android:layout_below="@+id/rv_title_bar">
        <ImageView
            android:id="@+id/iv_near"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="40%"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/yoho_press_near" />

        <TextView
            android:id="@+id/tv_near"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:layout_below="@id/iv_near"
            style="@style/tv_setting"
            android:text="@string/near_to_open" />
    </android.support.percent.PercentRelativeLayout>
    <View
        android:id="@+id/view0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="0.3%"
        android:layout_below="@+id/rv_shake"
        android:background="@color/gray2"/>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_about"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="49.7%"
        app:layout_heightPercent="26%"
        android:layout_marginTop="0dp"
        app:layout_marginTopPercent="0.3%"
        android:layout_gravity="left|top"
        android:gravity="center"
        android:clickable="true"
        android:background="@color/white"
        android:layout_below="@+id/rv_shake">
        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="35%"
            app:layout_heightPercent="35%"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/yoho_press_explain" />

        <TextView
            android:id="@+id/tv_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:layout_below="@id/iv_about"
            style="@style/tv_setting"
            android:text="@string/about" />
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="49.7%"
        app:layout_heightPercent="26%"
        android:layout_marginTop="0dp"
        app:layout_marginTopPercent="0.3%"
        android:layout_gravity="right|top"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:clickable="true"
        android:background="@color/white"
        android:layout_below="@+id/rv_shake">
        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="35%"
            app:layout_heightPercent="35%"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@drawable/yoho_press_user" />

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:layout_below="@id/iv_user"
            style="@style/tv_setting"
            android:text="@string/user" />
    </android.support.percent.PercentRelativeLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="0.3%"
        android:layout_below="@+id/rv_about"
        android:background="@color/gray2"/>
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="19.4%"
        android:layout_marginTop="0dp"
        app:layout_marginTopPercent="0.3%"
        android:layout_below="@id/rv_user"
        android:background="@color/white"/>

</android.support.percent.PercentRelativeLayout>
