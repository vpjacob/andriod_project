<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_act__about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    tools:context="com.doormaster.topkeeper.activity.Act_About">
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_tb_about"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="28%"
        android:layout_alignParentTop="true"
        android:background="@mipmap/yoho_bg_setting">

        <com.doormaster.topkeeper.view.TitleBar
            android:id="@+id/setting_title_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="21.5%"
            app:titleBarTitle="@string/about"
            app:titleBarLeftImage="@mipmap/yoho_close"
            app:titleBarBackground="#00000000"
            android:layout_gravity="left|top"
            android:gravity="center"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="28%"
            app:layout_heightPercent="28%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="15%"
            android:layout_below="@+id/setting_title_bar"
            android:layout_centerHorizontal="true"
            android:scaleType="centerInside"
            android:src="@mipmap/yoho_explain_grey" />
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="72%"
        android:layout_below="@+id/rv_tb_about"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="20%"
            app:layout_heightPercent="18%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="14%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="14%"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="14%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="40%"
            android:gravity="left"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/yoho_grey"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="40%"
            android:layout_below="@+id/text1"
            android:gravity="left"
            android:text=""
            android:textSize="15sp"
            android:textColor="@color/yoho_grey"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="2.5%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="40%"
            android:layout_below="@+id/text2"
            android:gravity="left"
            android:lineSpacingMultiplier="1.3"
            android:text=""
            android:textSize="7sp"
            android:textColor="@color/yoho_grey"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="5%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="40%"
            android:layout_below="@+id/text3"
            android:gravity="left"
            android:text="@string/customer_service"
            android:textSize="12sp"
            android:textColor="@color/yoho_grey"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/text5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="1%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="40%"
            android:layout_below="@+id/text4"
            android:gravity="left"
            android:text="@string/yoho_phone"
            android:textSize="12sp"
            android:textColor="@color/yoho_grey"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/text6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="40%"
            android:layout_below="@+id/text5"
            android:gravity="left"
            android:text="@string/yoho_fax"
            android:textSize="12sp"
            android:textColor="@color/yoho_grey"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/text7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="40%"
            android:layout_below="@+id/text6"
            android:gravity="left"
            android:text="@string/website"
            android:textSize="12sp"
            android:textColor="@color/yoho_grey"
            android:visibility="gone"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
