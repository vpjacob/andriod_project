<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_act__userinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    tools:context="com.doormaster.topkeeper.activity.Act_Userinfo">
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_tb_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="28%"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <com.doormaster.topkeeper.view.TitleBar
            android:id="@+id/setting_title_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="21.5%"
            android:layout_gravity="left|top"
            android:gravity="center"
            android:layout_alignParentTop="true"/>
        <com.doormaster.topkeeper.view.RoundImageView
            android:id="@+id/iv_avater"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/setting_title_bar"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/yoho_user_grey"/>
    </android.support.percent.PercentRelativeLayout>
    <!--<View-->
        <!--android:id="@+id/view"-->
        <!--android:layout_width="0dp"-->
        <!--android:layout_height="0dp"-->
        <!--app:layout_widthPercent="100%"-->
        <!--app:layout_heightPercent="0.3%"-->
        <!--android:layout_below="@+id/rv_tb_user"-->
        <!--android:background="@color/gray"/>-->
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="72%"
        android:layout_below="@+id/rv_tb_user"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_nick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="6%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="6%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="10%"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/nickname"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_grey"/>

        <EditText
            android:id="@+id/et_nick"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="6%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_marginRight="0dp"
            app:layout_marginRightPercent="5%"
            android:layout_below="@id/tv_nick"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:editable="false"
            android:textSize="@dimen/userinfo_et_size"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:background="@null"/>
        <View
            android:id="@+id/view0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="90%"
            app:layout_heightPercent="0.1%"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"
            android:layout_below="@id/et_nick"/>
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="6%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="6%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="3%"
            android:layout_below="@+id/view0"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/email"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_grey"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="6%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_marginRight="0dp"
            app:layout_marginRightPercent="5%"
            android:layout_below="@id/tv_email"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:editable="false"
            android:textSize="@dimen/userinfo_et_size"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:background="@null"
            android:inputType="textEmailAddress" />
        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="90%"
            app:layout_heightPercent="0.1%"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"
            android:layout_below="@id/et_email"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="6%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="6%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="3%"
            android:layout_below="@+id/view1"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/phone_number"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_grey"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="6%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_marginRight="0dp"
            app:layout_marginRightPercent="5%"
            android:layout_below="@id/tv_phone"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:editable="false"
            android:textSize="@dimen/userinfo_et_size"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:background="@null"
            android:inputType="phone"
            android:visibility="gone"/>
        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="90%"
            app:layout_heightPercent="0.1%"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"
            android:layout_below="@id/et_phone"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_modify_psd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="6%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="6%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="3%"
            android:layout_below="@+id/view2"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/modify_pwd"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_orange"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
