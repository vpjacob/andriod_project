body {
	font-family: "微软雅黑";
	background-color:#efefef;
	overflow: hidden;
}
img {
	display: block;
}
input {
	margin: 0;
	padding: 0;
	outline: none;
	border: none;
	text-align: right;
}
button{
	border:none;
	padding:0;
	margin:0;
	outline:0;
}

.clearfix {
	clear: both;
}

h1{
	background: #0eaae3;
}
.title{
	color:#FFFFFF;
	font-size:17px;
}
.Personal_box{
	background:#FFFFFF;
	overflow: hidden;
}
.Personal_title{
	background:#FFFFFF;
	width:100%;
	margin:auto;
	line-height:45px;
	margin-top:10px;
	clear:both;
	border-bottom:solid 1px #efefef;
}
.Personal_title span{
	position:relative;
	float:left;
	width:50%;
	text-align:center;
	font-size:13px;
	border-bottom:solid 1px rgba{0,0,0,0};
}
.Personal_title .special{
	color:#0eaae3;
	border-bottom:solid 1px #0eaae3;
	padding:0 20px;
}
.Personal_centent{
	background:#FFFFFF;
	position: relative;
}
.Personal_centent .list_box button{
	margin:0;
	padding:0;
	outline:none;
	border:none;
	background:#FFFFFF;
	color:#a9a9a9;
	float:right;
	margin-right:8%;
}
.Personal_centent .list_box div{
	width:100%;
	border-bottom:solid 1px #efefef;
	margin-left:4%;
	line-height:46px;
	font-size:13px;
	border:none;
	outline:none;
}
.Personal_centent .list_box div:nth-child(2){
	width:100%;
	margin-left:4%;
	line-height:46px;
	font-size:13px;
	border:none;
	outline:none;
}
.Personal_centent .list_box input{
	float:right;
	margin-right:8%;
	line-height:46px;	
}
.Personal_centent .list_box select{
	width:28%;
	height:30px;
	border:1px solid #E5E5E5;
	border-radius:5px;
	padding:0;
	margin:0;
	float:right;
	margin-right:38%;
	margin-top:10px;
	background-color: white;
}
.next{
	width:92%;
	margin:auto;
}
.next button{
	width:100%;
	height:35px;
	border-radius:10px;
	background:#0eaae3;
	color:#FFFFFF;
	margin-top:40px;
	font-size:13px;
}
.beizhu{
	margin-top:20px;
}

textarea{
	border:1px solid #E5E5E5;
	resize:none;
	float:right;
	margin-right:16%;
	font-size: 18px;
	margin-top:10px;
	border-radius: 5px;
	width:50%;
}
.other{
	margin-top:22%;
	height: 150px;
	border-top:1px solid #E5E5E5;
}
.other .per{
	border:1px solid #E5E5E5;
	border-radius: 5px;
	margin-left:10%;
}
.other .er{
	margin-top:5%;
}
.other .er1{
	margin-top:5%;
}
.other span{
	float: left;
	margin-left:4%;
	font-size:13px;
	margin-top: 10px;
}
.result{
	float:right;
	margin-right:8%;
	line-height:46px;
	color: #f74c3f;
}
.Personal_centent .list_box .waterwx{
	background-color: #E6E6E6;
	margin-top:10px;
	border-radius: 3px;
	width:98%;
	margin-left:1%;
}
.result1{
	float:right;
	margin-right:8%;
	line-height:46px;
	color: #52A840;
}


.black_box{
	background:rgba(0,0,0,0.5);
	position:absolute;
	top:0;
	left:0;
	z-index:20000;
	height:100%;
	width:100%;
	display:none;
	overflow: hidden;
}
.tankuang_box{
	position:absolute;
	top:25%;
	left:0;
	z-index:20001;
	width:100%;
	display:none;
	overflow: hidden;
}
.tankuang{
	width:84%;
	height:280px;
	margin:auto;
	background-color: white;
	border-radius:5px;
	overflow:hidden;
	
}
.tankuang div:nth-child(1){
	background-color: #FFFFFF;
	font-size:18px;
	border-bottom:1px solid #E6E6E6;
	height: 50px;
}
.tankuang div img{
	float: right; 
	margin-top:15px;
	width: 20px;
	height: 20px;
	margin-right:3%;
}
.tankuang div span{
	margin-top:12px;
	margin-left:12px;
}
.tankuang div .span1{
	margin-top:12px;
	margin-left:12px;
	font-size:14px;
}




