/*清除浮动*/
.clear {
	height: 0px;
	line-height: 0px;
	font-size: 0px;
	clear: both;
}

.imgtop{
    text-align:center;
    width:100%;
    height:200px;
    background: url("../../image/loveback.jpg") no-repeat center;
    background-size:cover;
    background-color:rgba(0,0,0,0.5); 
}

.imgbottom,.imgbottom img{
    width:100%;
}

.content-block{
   margin:0;
   padding:0;
}

.imgbottom p{
  text-align:center;
}
.imgtop>div{
  width:100%;
  height:100%;
  background-color:rgba(0,0,0,.4); 
  color:#fff;
  overflow: hidden;
}

.imgtop>div>div{
  margin-top:80px;
}
