.bar{
  position:relative;
}

.firstul,.secondul{
  position:absolute;
  background-color:#444444;
  color:#fff;
  width:30%;
  z-index:150;
  display:none;
}

.firstul li,.secondul li{
   border-bottom: 1px solid #BBBBBB;
   padding:8px 8px;
} 

.firstul{
   left:30%;
}

.secondul{
   right:0;
}

.last{
  border:none;
}

li.first{
   width:5px;
   height:5px;
   position:absolute;
   z-index:200;
   -webkit-transform:rotate(45deg);
   transform:rotate(45deg);
   top:-7px;
   right:15px;
   background-color:#444444;
   border:none;
   
}
