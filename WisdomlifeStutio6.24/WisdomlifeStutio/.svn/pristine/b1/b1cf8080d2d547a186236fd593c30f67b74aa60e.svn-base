<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingRight="5dp"
    android:gravity="center"
    android:orientation="vertical"
	android:background="#8C8C8C">

   
<LinearLayout 
    android:id="@+id/bit_dev"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_imageview"
        android:layout_width="20dp"
        android:layout_height="20dp"
         android:layout_marginTop="9dp"
        android:src="@mipmap/add_device" />

    <Button
        android:id="@+id/add_dev"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:onClick="click"
        android:text="@string/add_device"
        android:background="#8C8C8C"
        android:textSize="15sp" 
        android:textColor="#FFFFFF"/>

    </LinearLayout>

	<LinearLayout 
	    android:id="@+id/bit_scan"
	     android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="visible">
	
	    <ImageView
	        android:id="@+id/item_imageview1"
	        android:layout_width="20dp"
	        android:layout_height="20dp"
	         android:layout_marginTop="9dp"
	        android:src="@mipmap/scan_open" />
	    <Button
	        android:id="@+id/scan_dev"
	          android:layout_width="wrap_content"
	        android:layout_height="35dp"
	        android:layout_marginTop="1dp"
	        android:text="@string/scan"
	        android:textSize="15sp"
	        android:background="#8C8C8C"
	        android:onClick="click" 
	        android:textColor="#FFFFFF"/>

    </LinearLayout>
    <LinearLayout 
    android:id="@+id/bit_video"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="gone">

    <ImageView
        android:id="@+id/item_imageview2"
        android:layout_width="20dp"
        android:layout_height="20dp"
         android:layout_marginTop="9dp"
        android:src="@mipmap/video_dev" />
    <Button
        android:id="@+id/video_dev"
          android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="1dp"
        android:text="@string/add_video_dialog"
        android:textSize="15sp"
        android:background="#8C8C8C"
        android:onClick="click" 
        android:textColor="#FFFFFF"/>

    </LinearLayout>

</LinearLayout>