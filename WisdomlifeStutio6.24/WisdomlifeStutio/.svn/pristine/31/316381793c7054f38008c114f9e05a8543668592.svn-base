body {
	font-family: "微软雅黑";
	background-color:white;
}
img {
	display: block;
}
input {
	margin: 0;
	padding: 0;
	outline: none;
	border: none;
	text-align: right;
}
button{
	border:none;
	padding:0;
	margin:0;
	outline:0;
}

.clearfix {
	clear: both;
}
.box{
	width: 96%;
	height:500px;
	margin-left:2%;
	margin-top:3%; 
	
}
.box .top{
	width: 100%;
	height:55%;
}

.box .top .same{
 	height: 25%;
}

.box .top .same span{
	color:#A1A1A1;
	font-size:15px;
	margin-top: 6%;
	float:left;
}

.box .top .same select{
	border-radius:5px;
	color:#A1A1A1;
	font-size:13px;
	float:right;
	margin-top: 2%;
	height:65%;
	width:72%;
	margin-left:1%;
	background-color: white;
}
.liandong{
	color:#A1A1A1;
	font-size:13px;
	float:right;
	margin-top: 3%;
	height:65%;
	width:72%;
	margin-left:1%;
	background-color: white;
}

.box .bottom{
	
	width: 100%;
	height:44%;
}
.box .bottom .user{
	width: 100%;
	height:22%;
}

.box .bottom .user span{
	margin-top:2%;
	color:#A1A1A1;
	font-size:15px;
	float:left;
}
.box .bottom .user input{
    margin-top:3.3%;
	color:#A1A1A1;
	font-size:15px;
	float:right;
	width:150px;
	
}
.box .bottom .user .yanzheng{
	border-radius:5px;
	font-size:13px;
	color:#0EAAE3;
	border:1px solid #0EAAE3;
	float:right;
	width:100px;
	height: 43px;
	text-align:center;
	line-height:40px;
	margin:0 auto;
}


.box .bottom .user button{
	width:100%;
	height:40px;
	border-radius:5px;
	background:#0eaae3;
	color:#FFFFFF;
	font-size:13px;
	margin-top: 2px;
}











