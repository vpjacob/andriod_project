<?xml version="1.0" encoding="utf-8"?>
<com.uzmap.pkg.uzmodules.uzChatBox.InputLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:gravity="center_vertical"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/left_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="false" />

        <com.uzmap.pkg.uzmodules.uzChatBox.ChatBoxEditText
            android:id="@+id/chat_content"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="0.8"
            android:background="@drawable/mo_inputfield_round_edit"
            android:focusableInTouchMode="true"
            android:minHeight="40dp"
            android:paddingLeft="5dp" />

        <Button
            android:id="@+id/record_btn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="0.8"
            android:minHeight="40dp"
            android:paddingLeft="1dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/emoticons_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:clickable="true"
            android:focusable="false" />

        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp" >

            <ImageView
                android:id="@+id/post_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:focusable="false" />

            <ImageView
                android:id="@+id/send_button"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:scaleType="center"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

</com.uzmap.pkg.uzmodules.uzChatBox.InputLinearLayout>