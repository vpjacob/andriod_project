<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/main_background"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:id="@+id/forget_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background">
        <ImageView
            android:id="@+id/forget_pswd_back"
        	android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/left_ac"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:layout_alignParentLeft="true"
            android:onClick="click"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_textcolor"
            android:text="@string/forgot_pwd"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main_background" >

        <Button
            android:id="@+id/phone_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
            android:layout_marginTop="130sp"
            android:background="@drawable/shape_btn_blue"
            android:onClick="click"
            android:text="@string/phoneuser"
            android:textSize="16dp"/>
    </RelativeLayout>
        <Button
            android:id="@+id/mail_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
             android:background="@drawable/shape_btn_blue"
             android:onClick="click"
             android:text="@string/mailuser"
             android:textSize="16dp"/>
</LinearLayout>
