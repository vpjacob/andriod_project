<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/main_background"
    android:id="@+id/item_single_msg"
    android:layout_marginBottom="15dp">
            
	<TextView
	    android:id="@+id/frag_contact_msg_time"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dp"
	    android:background="@color/main_background"
	    android:textColor="@color/main_textcolor"
	    android:gravity="center"
	    android:singleLine="false"
	    android:text="@string/frag_msg_time"
	    android:textSize="12sp" />

   	<LinearLayout 
       	android:layout_width="wrap_content"
		android:layout_height="wrap_content"
    	android:orientation="horizontal" 
    	android:background="@color/main_background"
    	android:divider="#1998D5"
    	android:layout_marginRight="40dp"
    	android:showDividers="end" >
    	
	    <ImageView
	        android:id="@+id/frag_contact_img_portrait"
	        android:layout_width="40dp"
	        android:layout_height="fill_parent"
	        android:background="#00000000"
	        android:contentDescription="@string/frag_msg_img"
	        android:src="@mipmap/service_woman" />
	    
	    <LinearLayout
	        
	        android:id="@+id/frag_ly_contact_msg"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@drawable/msg_chat_bg"
	        >
	        
	        <TextView
	            
		        android:id="@+id/frag_contact_msg_content"
		        android:text="@string/frag_msg_info"
		        android:layout_width="wrap_content"
		        android:textColor="#000000"
		        android:layout_height="wrap_content"
		        android:background="#00000000"
		        android:paddingLeft="5dp"
		        android:singleLine="false"
		        android:textSize="12sp" />
	        
	        <ImageView
	            android:id="@+id/frag_contact_msg_content_img"
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:background="@color/main_background"
	            android:contentDescription="msg_img"
	            android:visibility="visible"
	            
	            />
	        <TextView 
	            android:id="@+id/frag_contact_msg_tips"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:text="@string/frag_msg_share_tip"/>
	    </LinearLayout>
	    
	</LinearLayout>	 
</LinearLayout>
