<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@color/main_background"
    android:layout_marginBottom="15dp">
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/main_background">
        <LinearLayout 
            android:id="@+id/frag_item"
            android:layout_width="0dp"
            android:layout_weight="0.9"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/main_background">
		    <ImageView
		        android:id="@+id/frag_img_lock"
		        android:layout_width="0dp"
		        android:layout_height="30dp"
		        android:layout_weight="0.1"
		        android:padding="5dp"
				android:layout_gravity="center_vertical"
		        android:contentDescription="@string/frag_locklist_img"
		        android:src="@drawable/icon_b1"
		        android:background="@drawable/item_select" />
		   	<TextView
		        android:id="@+id/frag_lock_info"
		        android:layout_width="0dp"
		        android:layout_height="60dp"
		        android:layout_weight="0.5"
		        android:gravity="center_vertical|left"
		        android:textColor="@color/main_textcolor"
		        android:text="@string/frag_lock_info"
		        android:textSize="14sp"
		        android:background="@drawable/item_select"/>
		</LinearLayout>
     	<ImageView
     	    android:id="@+id/frag_img_lock_info"
     	    android:layout_width="0dp"
     	    android:layout_weight="0.1"
     	    android:layout_height="20dp"
			android:layout_gravity="center_vertical"
     	    android:background="@color/main_background"
     	    android:contentDescription="@string/frag_img_lock_info"
     	    android:padding="5dp"
     	    android:src="@drawable/icon_c"
     	    android:visibility="visible"
     	    android:clickable="true"/>
   </LinearLayout>
   
   <View
	    android:layout_width="match_parent"
	    android:layout_height="0.01dp"
	    android:background="#C7C7C8" 
	/>
</LinearLayout>
