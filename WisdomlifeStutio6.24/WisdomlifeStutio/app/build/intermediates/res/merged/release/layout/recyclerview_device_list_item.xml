<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyclerview_device_list_item"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="left|center_vertical"
        android:maxLines="1"
        android:scaleType="centerInside"
        android:src="@mipmap/yoho_device_grey"/>

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_alignParentTop="true"
        android:gravity="left|bottom"
        android:layout_toRightOf="@+id/iv_item"
        style="@style/tv_devicelist_grey"/>

    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:gravity="left|top"
        android:layout_below="@+id/tv_item_title"
        android:layout_toRightOf="@+id/iv_item"
        style="@style/tv_devicelist_grey" />

    <ImageView
        android:id="@+id/iv_item_explain"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:maxLines="1"
        android:focusable="false"
        android:scaleType="centerInside"
        android:src="@mipmap/yoho_explain_grey"/>

</android.support.percent.PercentRelativeLayout>
