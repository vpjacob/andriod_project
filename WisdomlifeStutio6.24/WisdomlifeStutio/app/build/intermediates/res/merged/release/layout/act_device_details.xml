<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_devicelist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/black"
    tools:context="com.doormaster.topkeeper.activity.Act_Device_Details">
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_tb_device"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="28%"
        android:layout_alignParentTop="true"
        android:background="@mipmap/yoho_bg_device">

        <com.doormaster.topkeeper.view.TitleBar
            android:id="@+id/setting_title_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="21.5%"
            android:layout_gravity="left|top"
            android:gravity="center"
            android:layout_alignParentTop="true"/>
    </android.support.percent.PercentRelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv__device_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="72%"
        android:layout_below="@+id/rv_tb_device"
        android:background="@color/white">
        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="35%"
            app:layout_heightPercent="14%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:text="@string/device_type"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/yoho_grey"/>
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="14%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_toRightOf="@id/text1"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:text="@string/device_type"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/yoho_grey"/>
        <View
            android:id="@+id/view1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="0.2%"
            android:layout_below="@id/text1"
            android:background="@color/gray2"/>
        <TextView
            android:id="@+id/text2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="35%"
            app:layout_heightPercent="14%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="0.2%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_below="@id/view1"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:text="@string/serial_number"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/yoho_grey"/>
        <TextView
            android:id="@+id/tv_serial"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="14%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_below="@id/view1"
            android:layout_toRightOf="@id/text2"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:text="@string/device_type"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/yoho_grey"/>
        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="0.2%"
            android:layout_below="@id/text2"
            android:background="@color/gray2"/>
        <TextView
            android:id="@+id/text3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="35%"
            app:layout_heightPercent="14%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="0.2%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_below="@id/view2"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:text="@string/name"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/yoho_grey"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="14%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_below="@id/view2"
            android:layout_toRightOf="@id/text3"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:text="@string/device_type"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/yoho_grey"/>
        <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="0.2%"
            android:layout_below="@id/text3"
            android:background="@color/gray2"/>
        <TextView
            android:id="@+id/text4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="35%"
            app:layout_heightPercent="14%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="0.2%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_below="@id/view3"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:text="@string/effective_date"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/yoho_grey"/>
        <TextView
            android:id="@+id/tv_effective_date"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="40%"
            app:layout_heightPercent="14%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_below="@id/view3"
            android:layout_toRightOf="@id/text4"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:text="@string/device_type"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/yoho_grey"/>
        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="100%"
            app:layout_heightPercent="0.2%"
            android:layout_below="@id/text4"
            android:background="@color/gray2"/>
        <TextView
            android:id="@+id/text5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_widthPercent="35%"
            app:layout_heightPercent="14%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="0.2%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="5%"
            android:layout_below="@id/view4"
            android:maxLines="1"
            android:gravity="left|center_vertical"
            android:text="@string/delete_device"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/yoho_orange"/>
    </android.support.percent.PercentRelativeLayout>
</android.support.percent.PercentRelativeLayout>
