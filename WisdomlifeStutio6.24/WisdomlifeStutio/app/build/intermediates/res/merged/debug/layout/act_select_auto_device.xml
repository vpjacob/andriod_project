<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/wisdomlife_main_background"
    android:fitsSystemWindows="true">

    <com.doormaster.topkeeper.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleBarTitle="@string/select_device"
        app:titleBarLeftImage="@drawable/left_ac"
        app:titleBarBackground="#00000000"
        android:layout_gravity="left|top"
        android:gravity="center"
        android:background="@color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/yoho_grey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_select_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/btn_grey_normal_shape"
            android:text="全选"
            android:textColor="@color/gray_text_color" />

        <Button
            android:id="@+id/btn_select_none"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/btn_grey_normal_shape"
            android:text="全不选"
            android:textColor="@color/gray_text_color" />

        <Button
            android:id="@+id/btn_select_opposite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:background="@drawable/btn_grey_normal_shape"
            android:text="反选"
            android:textColor="@color/gray_text_color"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/yoho_grey"/>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/yoho_grey"
        android:dividerHeight="1px"/>
</LinearLayout>