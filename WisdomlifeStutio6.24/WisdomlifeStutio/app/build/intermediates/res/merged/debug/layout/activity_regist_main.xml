<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_act__regist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/gray2"
    tools:context="com.doormaster.topkeeper.activity.Act_Regist">

    <com.doormaster.topkeeper.view.TitleBar
        android:id="@+id/reg_title_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="6%"
        android:layout_gravity="left|top"
        android:gravity="center"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/iv_reg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="30%"
        android:layout_gravity="center|top"
        android:gravity="center"
        android:layout_below="@+id/reg_title_bar"
        android:background="@drawable/banner1" />
    <TextView
        android:id="@+id/tv_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="100%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="6%"
        android:layout_marginTop="0dp"
        app:layout_marginTopPercent="3%"
        android:layout_below="@id/iv_reg"
        android:gravity="left"
        android:maxLines="1"
        android:text="@string/account"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="100%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="5%"
        android:layout_marginRight="0dp"
        app:layout_marginRightPercent="5%"
        android:layout_below="@id/tv_account"
        android:gravity="left"
        android:maxLines="1"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:hint="@string/enter_phone_or_email"
        android:visibility="gone"/>
    <Button
        android:id="@+id/bt_reg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        android:layout_marginTop="0dp"
        app:layout_marginTopPercent="20%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="5%"
        android:layout_marginRight="0dp"
        app:layout_marginRightPercent="5%"
        android:layout_below="@id/et_username"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="@color/white"
        android:background="@drawable/btn_black_normal_shape"
        android:visibility="gone"/>
    <Button
        android:id="@+id/bt_reg_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        android:layout_marginTop="0dp"
        app:layout_marginTopPercent="10%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="5%"
        android:layout_marginRight="0dp"
        app:layout_marginRightPercent="5%"
        android:layout_below="@id/iv_reg"
        android:gravity="center"
        android:text="@string/mailbox_registration"
        android:textColor="@color/white"
        android:background="@drawable/btn_blue_normal_shape"/>
    <Button
        android:id="@+id/bt_reg_phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="8%"
        android:layout_marginTop="0dp"
        app:layout_marginTopPercent="5%"
        android:layout_marginLeft="0dp"
        app:layout_marginLeftPercent="5%"
        android:layout_marginRight="0dp"
        app:layout_marginRightPercent="5%"
        android:layout_below="@id/bt_reg_email"
        android:gravity="center"
        android:text="@string/phone_number_registration"
        android:textColor="@color/white"
        android:background="@drawable/btn_blue_normal_shape"/>
</android.support.percent.PercentRelativeLayout>
