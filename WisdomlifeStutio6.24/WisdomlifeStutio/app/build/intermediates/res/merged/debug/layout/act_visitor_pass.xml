<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_act__visitor_pass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="com.doormaster.topkeeper.activity.Act_VisitorPass">
    <com.doormaster.topkeeper.view.TitleBar
        android:id="@+id/visitorpass_title_bar"
        app:layout_widthPercent="100%"
        app:layout_heightPercent="6%"
        app:titleBarTitle="@string/visitor_pass"
        android:layout_gravity="left|top"
        android:gravity="center"
        android:layout_alignParentTop="true"/>
    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_widthPercent="100%"
        android:layout_below="@+id/visitorpass_title_bar"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_visitor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            android:layout_marginLeft="0dp"
            app:layout_marginLeftPercent="6%"
            android:layout_marginTop="0dp"
            app:layout_marginTopPercent="3%"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/visitor_name"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_grey"/>

        <EditText
            android:id="@+id/et_visitor"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            app:layout_marginTopPercent="3%"
            android:layout_below="@id/tv_visitor"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:textSize="@dimen/userinfo_et_size"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:background="@null"/>
        <View
            android:id="@+id/view0"
            android:layout_height="1dp"
            app:layout_widthPercent="90%"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"
            android:layout_below="@id/et_visitor"/>
        <TextView
            android:id="@+id/tv_explain"
            android:layout_height="wrap_content"
            app:layout_widthPercent="34%"
            app:layout_marginLeftPercent="6%"
            app:layout_marginTopPercent="3%"
            android:layout_below="@+id/view0"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/explain"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_grey"/>
        <TextView
            android:id="@+id/tv_transit_times"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            app:layout_marginLeftPercent="40%"
            app:layout_marginTopPercent="3%"
            android:layout_below="@+id/view0"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/transit_times"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_grey"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/et_explain"
            android:layout_height="wrap_content"
            app:layout_widthPercent="35%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="3%"
            android:layout_below="@id/tv_explain"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:editable="false"
            android:text="@string/select_device"
            android:maxLines="1"
            android:textSize="@dimen/userinfo_et_size"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:background="@null" />

        <ExpandableListView
            android:id="@+id/exp_devList"
            android:layout_height="wrap_content"
            app:layout_widthPercent="35%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="3%"
            android:layout_below="@id/tv_explain"
            android:layout_centerVertical="true"
            android:groupIndicator="@null"
            android:gravity="left"
            android:visibility="gone"/>
        <EditText
            android:id="@+id/et_transit_times"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            app:layout_marginLeftPercent="40%"
            app:layout_marginTopPercent="3%"
            android:layout_below="@id/tv_explain"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="0"
            android:inputType="number"
            android:textSize="@dimen/userinfo_et_size"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:background="@null"
            android:visibility="gone"/>
        <View
            android:id="@+id/view1"
            android:layout_height="1dp"
            app:layout_widthPercent="90%"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"
            android:layout_below="@id/et_explain"/>
        <TextView
            android:id="@+id/tv_start_date"
            android:layout_height="wrap_content"
            app:layout_widthPercent="34%"
            app:layout_marginLeftPercent="6%"
            app:layout_marginTopPercent="3%"
            android:layout_below="@+id/view1"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/available_date"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_grey"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_start_time"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            app:layout_marginLeftPercent="40%"
            app:layout_marginTopPercent="3%"
            android:layout_below="@+id/view1"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/start_time"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_grey"
            android:visibility="gone"/>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/rv_start_date"
            android:layout_height="wrap_content"
            app:layout_widthPercent="35%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="3%"
            android:clickable="true"
            android:layout_below="@+id/tv_start_date"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_start_date"
                app:layout_widthPercent="15%"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/yoho_visitor_arrow"/>
            <TextView
                android:id="@+id/et_start_date"
                app:layout_widthPercent="85%"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="18%"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/userinfo_et_size"
                android:textColor="@color/black"
                android:background="@null" />
        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/rv_start_time"
            android:layout_height="wrap_content"
            app:layout_widthPercent="35%"
            app:layout_marginLeftPercent="40%"
            app:layout_marginTopPercent="3%"
            android:clickable="true"
            android:layout_below="@+id/tv_start_time"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_start_time"
                app:layout_widthPercent="15%"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/yoho_visitor_arrow"/>
            <TextView
                android:id="@+id/et_start_time"
                app:layout_widthPercent="85%"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="18%"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/userinfo_et_size"
                android:textColor="@color/black"
                android:background="@null" />
        </android.support.percent.PercentRelativeLayout>
        <View
            android:id="@+id/view2"
            android:layout_height="1dp"
            app:layout_widthPercent="90%"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"
            android:layout_below="@id/rv_start_time"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/tv_end_date"
            android:layout_height="wrap_content"
            app:layout_widthPercent="34%"
            app:layout_marginLeftPercent="6%"
            app:layout_marginTopPercent="3%"
            android:layout_below="@+id/view2"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/end_date"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_grey"/>
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_height="wrap_content"
            app:layout_widthPercent="60%"
            app:layout_marginLeftPercent="40%"
            app:layout_marginTopPercent="3%"
            android:layout_below="@+id/view2"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="@string/end_time"
            android:textSize="@dimen/userinfo_tv_size"
            android:textColor="@color/yoho_grey"/>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/rv_end_date"
            android:layout_height="wrap_content"
            app:layout_widthPercent="35%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="3%"
            android:clickable="true"
            android:layout_below="@+id/tv_end_time">
            <ImageView
                android:id="@+id/iv_end_date"
                app:layout_widthPercent="15%"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/yoho_visitor_arrow"/>
            <TextView
                android:id="@+id/et_end_date"
                app:layout_widthPercent="85%"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="18%"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/userinfo_et_size"
                android:textColor="@color/black"
                android:background="@null" />
        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:id="@+id/rv_end_time"
            android:layout_height="wrap_content"
            app:layout_widthPercent="35%"
            app:layout_marginLeftPercent="40%"
            app:layout_marginTopPercent="3%"
            android:clickable="true"
            android:layout_below="@+id/tv_end_time">
            <ImageView
                android:id="@+id/iv_end_time"
                app:layout_widthPercent="15%"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/yoho_visitor_arrow"/>
            <TextView
                android:id="@+id/et_end_time"
                app:layout_widthPercent="85%"
                android:layout_height="wrap_content"
                app:layout_marginLeftPercent="18%"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:maxLines="1"
                android:text=""
                android:textSize="@dimen/userinfo_et_size"
                android:textColor="@color/black"
                android:background="@null" />
        </android.support.percent.PercentRelativeLayout>
        <View
            android:id="@+id/view3"
            android:layout_height="1dp"
            app:layout_widthPercent="90%"
            android:layout_centerHorizontal="true"
            android:background="@color/gray"
            android:layout_below="@id/rv_end_time"/>

        <Button
            android:id="@+id/btn_establish"
            android:layout_height="wrap_content"
            app:layout_widthPercent="100%"
            app:layout_marginTopPercent="3%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginRightPercent="5%"
            android:layout_below="@id/view3"
            android:gravity="center"
            android:text="@string/establish_pass"
            android:textColor="@color/white"
            android:background="@drawable/btn_orange_normal_shape"/>
    </android.support.percent.PercentRelativeLayout>

    <LinearLayout
        android:id="@+id/qrcode_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_marginTopPercent="3%"
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_below="@id/rv_content">
        <ImageView
            android:id="@+id/show_qrcode_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_gravity="center_horizontal"
            android:contentDescription="qrcodeView"
            android:scaleType="fitCenter"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:text="@string/touch_to_share"
                android:textColor="@color/main_textcolor"/>

            <ImageButton
                android:id="@+id/wechat_share"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/main_background"
                android:scaleType="centerInside"
                android:src="@drawable/wechat"/>
            <ImageButton
                android:id="@+id/qq_share"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:background="@color/main_background"
                android:src="@drawable/qq"/>
        </LinearLayout>
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>
