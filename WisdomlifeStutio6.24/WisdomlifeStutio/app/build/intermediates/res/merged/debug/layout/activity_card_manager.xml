<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:gravity="center_horizontal"
	android:fitsSystemWindows="true"
    android:orientation="vertical" >
    
    <include
        android:id="@+id/main_top" 
        layout="@layout/inteligoo_main_top"/>
    
	<Button 
	    
	    android:id="@+id/bt_swipe_add"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_manage_swipe_add"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_btn_blue"
	    android:onClick="swipeAdd"/>
	
	<Button
	    android:id="@+id/bt_swipe_del"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_manage_swipe_del"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_btn_blue"
	    android:onClick="swipeDel"/>
	
	<Button 
	    
	    android:id="@+id/bt_serial_add"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/card_manage_batch_add"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_btn_blue"
	    android:onClick="serialAdd"/>
	
	<Button 
	    
	    android:id="@+id/bt_serial_del"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/card_manage_batch_del"
        android:background="@drawable/shape_btn_blue"
	    android:onClick="serialDel"/>
	
	<Button 
	    
	    android:id="@+id/bt_input_manager"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/card_manage_input_manage"
        android:background="@drawable/shape_btn_blue"
	    android:onClick="inputCardnoView"/>
	
	<Button 
	    
	    android:id="@+id/bt_exit_swipe"
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/red_button"
        android:onClick="exitSwipe"
        android:text="@string/card_manage_exist_swipe_model"
        android:visibility="gone"
	    
	    />
	
</LinearLayout>
